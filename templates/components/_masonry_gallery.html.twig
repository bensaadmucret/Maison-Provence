{% if images|length > 0 %}
    <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
        {% for column in images|batch((images|length / 4)|round(0, 'ceil')|default(1)) %}
            <div class="grid gap-4">
                {% for image in column %}
                    <div class="w-full aspect-[4/3] relative overflow-hidden rounded-lg mb-4">
                        <img src="{{ image.url }}"
                             alt="{{ image.alt|default('gallery-photo') }}"
                             class="w-full h-full object-cover transition-transform duration-500 hover:scale-110">
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endif %}

{# Contenu de la carte produit #}
<div class="relative aspect-[4/3] overflow-hidden">
    {% if product.media|length > 0 %}
        {% set mainMedia = product.media|first %}
        <img src="{{ vich_uploader_asset(mainMedia, 'imageFile') }}" 
             alt="{{ product.name }}"
             class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
    {% else %}
        <div class="w-full h-full bg-gray-100 flex items-center justify-center">
            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
        </div>
    {% endif %}
    
    {% if product.stock <= 0 %}
        <div class="absolute top-4 right-4 bg-red-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
            Épuisé
        </div>
    {% endif %}
</div>

<div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-2">{{ product.name }}</h3>
    <div class="flex justify-between items-center">
        <div class="text-primary font-bold text-xl">
            {{ product.price|number_format(2, ',', ' ') }} €
        </div>
        <button class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors">
            <span class="mr-2">Voir</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
        </button>
    </div>
</div>

{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex h-screen" style="background-color: var(--bg-main)">
        {# Barre latérale #}
        <div class="w-20 flex flex-col items-center py-6" style="background-color: var(--bg-sidebar); box-shadow: var(--shadow-lg)">
            {# Menu de navigation #}
            <nav class="flex-1 w-full">
                <div class="flex flex-col items-center space-y-4">
                    <a href="{{ path('app_customer_dashboard') }}" 
                       class="w-full flex justify-center p-3" 
                       style="{% if app.request.get('_route') == 'app_customer_dashboard' %}background-color: rgba(255, 255, 255, 0.1); color: var(--bg-white){% else %}color: rgba(255, 255, 255, 0.6); hover:color: var(--bg-white){% endif %}"
                       title="Tableau de bord">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                    </a>
                    
                    <a href="{{ path('app_customer_orders') }}"
                       class="w-full flex justify-center p-3"
                       style="{% if app.request.get('_route') == 'app_customer_orders' %}background-color: rgba(255, 255, 255, 0.1); color: var(--bg-white){% else %}color: rgba(255, 255, 255, 0.6); hover:color: var(--bg-white){% endif %}"
                       title="Mes commandes">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                        </svg>
                    </a>
                    
                    <a href="{{ path('app_customer_invoices') }}"
                       class="w-full flex justify-center p-3"
                       style="{% if app.request.get('_route') == 'app_customer_invoices' %}background-color: rgba(255, 255, 255, 0.1); color: var(--bg-white){% else %}color: rgba(255, 255, 255, 0.6); hover:color: var(--bg-white){% endif %}"
                       title="Mes factures">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                    </a>
                    
                    <a href="{{ path('app_customer_profile') }}"
                       class="w-full flex justify-center p-3"
                       style="{% if app.request.get('_route') == 'app_customer_profile' %}background-color: rgba(255, 255, 255, 0.1); color: var(--bg-white){% else %}color: rgba(255, 255, 255, 0.6); hover:color: var(--bg-white){% endif %}"
                       title="Mon profil">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </a>
                </div>
            </nav>
        </div>

        {# Contenu principal #}
        <div class="flex-1 overflow-auto">
            <div class="flex flex-col min-h-full">
                {# Contenu principal #}
                <div class="flex-1 p-8">
                    {% block dashboard_content %}{% endblock %}
                </div>

                {# Footer #}
                <footer class="mt-auto" style="background-color: var(--bg-white); border-top: 1px solid var(--border-light)">
                    <div class="mx-auto px-8 py-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-4">
                                <span style="color: var(--text-secondary)" class="text-sm"> {{ "now"|date("Y") }} Maison Provence</span>
                                <span style="color: var(--text-muted)">•</span>
                                <a href="{{ path('app_legal_mentions') }}" style="color: var(--text-secondary)" class="text-sm hover:underline">Mentions légales</a>
                            </div>
                            <div class="flex items-center space-x-4">
                                <a href="{{ path('app_contact') }}" style="color: var(--text-secondary)" class="text-sm hover:underline">Contact</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
{% endblock %}

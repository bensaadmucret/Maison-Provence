{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex h-screen bg-gray-100 dark:bg-gray-900">
        {# Barre latérale #}
        <div class="w-20 flex-shrink-0 bg-white dark:bg-gray-800 shadow-lg">
            <div class="h-full flex flex-col justify-between py-4">
                {# Logo ou Marque #}
                <div class="flex justify-center">
                    <a href="{{ path('app_home') }}" class="p-2">
                        <img src="{{ asset('images/logo.png') }}" alt="Logo" class="w-10 h-10">
                    </a>
                </div>

                {# Menu de navigation #}
                <nav class="flex-1 mt-6">
                    <div class="px-2 space-y-2">
                        {# Tableau de bord #}
                        <a href="{{ path('app_customer_dashboard') }}" 
                           class="flex justify-center p-3 rounded-lg transition-colors duration-200 {% if app.request.get('_route') == 'app_customer_dashboard' %}bg-indigo-100 text-indigo-600 dark:bg-indigo-900 dark:text-indigo-200{% else %}text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700{% endif %}"
                           title="Tableau de bord">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                        </a>

                        {# Commandes #}
                        <a href="{{ path('app_customer_orders') }}"
                           class="flex justify-center p-3 rounded-lg transition-colors duration-200 {% if app.request.get('_route') == 'app_customer_orders' %}bg-indigo-100 text-indigo-600 dark:bg-indigo-900 dark:text-indigo-200{% else %}text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700{% endif %}"
                           title="Mes commandes">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                            </svg>
                        </a>

                        {# Adresses #}
                        <a href="{{ path('app_customer_addresses') }}"
                           class="flex justify-center p-3 rounded-lg transition-colors duration-200 {% if app.request.get('_route') == 'app_customer_addresses' %}bg-indigo-100 text-indigo-600 dark:bg-indigo-900 dark:text-indigo-200{% else %}text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700{% endif %}"
                           title="Mes adresses">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </a>

                        {# Factures #}
                        <a href="{{ path('app_customer_invoices') }}"
                           class="flex justify-center p-3 rounded-lg transition-colors duration-200 {% if app.request.get('_route') == 'app_customer_invoices' %}bg-indigo-100 text-indigo-600 dark:bg-indigo-900 dark:text-indigo-200{% else %}text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700{% endif %}"
                           title="Mes factures">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                        </a>

                        {# Profil #}
                        <a href="{{ path('app_customer_profile') }}"
                           class="flex justify-center p-3 rounded-lg transition-colors duration-200 {% if app.request.get('_route') == 'app_customer_profile' %}bg-indigo-100 text-indigo-600 dark:bg-indigo-900 dark:text-indigo-200{% else %}text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700{% endif %}"
                           title="Mon profil">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </a>
                    </div>
                </nav>

                {# Section du bas #}
                <div class="px-2 space-y-2">
                    {# Bouton thème #}
                    <button x-data="{ 
                                isDark: localStorage.theme === 'dark' || (!localStorage.theme && window.matchMedia('(prefers-color-scheme: dark)').matches),
                                toggleTheme() {
                                    this.isDark = !this.isDark;
                                    if (this.isDark) {
                                        document.documentElement.classList.add('dark');
                                        localStorage.theme = 'dark';
                                    } else {
                                        document.documentElement.classList.remove('dark');
                                        localStorage.theme = 'light';
                                    }
                                }
                            }"
                            @click="toggleTheme"
                            class="w-full flex justify-center p-3 rounded-lg transition-colors duration-200 text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700"
                            title="Changer de thème">
                        <svg class="w-6 h-6 theme-toggle-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path class="dark:hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                            <path class="hidden dark:block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                        </svg>
                    </button>

                    {# Déconnexion #}
                    <a href="{{ path('app_logout') }}"
                       class="flex justify-center p-3 rounded-lg transition-colors duration-200 text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700"
                       title="Déconnexion">
                        <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        {# Contenu principal #}
        <div class="flex-1 flex flex-col overflow-hidden">
            <main class="flex-1 overflow-y-auto py-6" 
                  x-data 
                  x-init="$nextTick(() => { 
                      $el.classList.add('opacity-100', 'translate-y-0');
                      $el.classList.remove('opacity-0', 'translate-y-4');
                  })"
                  class="transform transition-all duration-300 ease-in-out opacity-0 translate-y-4">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    {% block dashboard_content %}{% endblock %}
                </div>
            </main>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Boutique indisponible - {{ parent() }}{% endblock %}

{% block meta_description %}Notre boutique en ligne est temporairement en mode vitrine. Découvrez notre sélection d'artisanat provençal et contactez-nous directement pour plus d'informations.{% endblock %}

{% block meta_robots %}noindex, follow{% endblock %}

{% block body %}
    <div class="min-h-full pt-16 pb-12 flex flex-col bg-white">
        <main class="flex-grow flex flex-col justify-center max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex-shrink-0 flex justify-center">
                <a href="{{ path('app_home') }}" class="inline-flex">
                    <span class="sr-only">Maison Provence</span>
                    <img class="h-12 w-auto" src="{{ asset('images/logo.png') }}" alt="Logo">
                </a>
            </div>
            <div class="py-16">
                <div class="text-center">
                    <p class="text-sm font-semibold text-indigo-600 uppercase tracking-wide">Maintenance en cours</p>
                    <h1 class="mt-2 text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl">Boutique temporairement indisponible</h1>
                    <p class="mt-2 text-base text-gray-500">{{ message|default('Notre boutique en ligne est temporairement indisponible. Nous vous invitons à découvrir nos produits et à nous contacter directement.') }}</p>
                    <div class="mt-6">
                        <a href="{{ path('app_home') }}" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Retour à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </main>
        <footer class="flex-shrink-0 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8">
            <nav class="flex justify-center space-x-4">
                <a href="{{ path('app_contact') }}" class="text-sm font-medium text-gray-500 hover:text-gray-600">
                    Contact
                </a>
                <span class="inline-block border-l border-gray-300" aria-hidden="true"></span>
                <a href="{{ path('app_home') }}" class="text-sm font-medium text-gray-500 hover:text-gray-600">
                    Accueil
                </a>
            </nav>
        </footer>
    </div>
{% endblock %}

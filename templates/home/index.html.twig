{% extends 'base.html.twig' %}

{% block title %}{{ site_config.siteName }} - L'Authenticité de la Provence{% endblock %}

{% block body %}
{# Hero Section #}
<section class="relative bg-teal-100">
    <div class="container mx-auto flex flex-col items-center justify-center px-6 py-16 lg:py-24 text-center">
        <!-- Left Content -->
        <div class="w-full max-w-xl space-y-6 text-center">
            <div class="inline-block px-4 py-2 text-sm font-medium text-primary bg-primary/10 rounded-lg">
                Bienvenue à Maison Provence
            </div>
            <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl">
                Découvrez l'<span class="text-primary">Authenticité</span> de la <span class="text-secondary">Provence</span>
            </h1>
            <p class="text-lg text-gray-600">
                Explorez notre collection unique de produits artisanaux provençaux, soigneusement sélectionnés pour vous.
            </p>
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-4">
                <a href="#collection" class="px-8 py-4 text-lg font-semibold text-white bg-primary rounded-lg shadow-lg hover:bg-primary-dark transition">
                    Découvrir la Collection
                </a>
                <a href="#about" class="px-8 py-4 text-lg font-semibold text-primary border-2 border-primary rounded-lg hover:bg-primary/10 transition">
                    En Savoir Plus
                </a>
            </div>
        </div>
    </div>
</section>

{# Collection Section #}
    <section class="py-16">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-extrabold text-gray-900 mb-4">Notre Collection</h2>
                <p class="text-xl text-gray-600">Découvrez nos produits authentiques de Provence</p>
            </div>

            {# Masonry Gallery #}
            {% set masonry_collection = {
                settings: {
                    columns: 3,
                    gap: 16
                },
                media: galleryImages
            } %}

            {{ include('components/_masonry.html.twig', {
                collection: masonry_collection
            }) }}
        </div>
    </section>


    {# Featured Products Section #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-extrabold text-gray-900 mb-4">Nos Produits Phares</h2>
                <p class="text-xl text-gray-600">Découvrez notre sélection de produits exceptionnels de Provence</p>
            </div>
            {% if featured_products|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {% for product in featured_products %}
                        {{ include('components/_product_card.html.twig', {
                            product: product,
                            class: 'h-full'
                        }) }}
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center text-gray-600">
                    <p>Aucun produit mis en avant pour le moment.</p>
                </div>
            {% endif %}
        </div>
    </section>

    {# Newsletter Section #}
    <section class="bg-gray-50 py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto text-center">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Restez informé</h2>
                <p class="text-lg text-gray-600 mb-8">
                    Inscrivez-vous à notre newsletter pour recevoir nos dernières actualités et offres exclusives
                </p>
                <form class="flex flex-col sm:flex-row gap-4 justify-center">
                    <input type="email" 
                           placeholder="Votre adresse email" 
                           class="flex-1 max-w-md px-6 py-4 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary/50 focus:border-primary">
                    <button type="submit" 
                            class="px-8 py-4 bg-primary text-white font-semibold rounded-xl hover:bg-primary-dark transition-colors">
                        S'inscrire
                    </button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

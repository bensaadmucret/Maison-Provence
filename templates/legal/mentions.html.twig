{% extends 'base.html.twig' %}

{% block title %}{{ page.title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">{{ page.title }}</h1>
            
            <div class="prose dark:prose-invert max-w-none">
                {{ page.content|raw }}
            </div>

            <div class="mt-8 text-sm text-gray-500 dark:text-gray-400">
                Dernière mise à jour : {{ page.updatedAt|date('d/m/Y') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

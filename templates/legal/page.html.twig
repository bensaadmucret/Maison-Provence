{% extends 'base.html.twig' %}

{% block title %}{{ page.title }} - {{ parent() }}{% endblock %}

{% block meta_description %}{{ page.seo.metaDescription }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-sm p-8">
            <h1 class="text-3xl font-bold mb-6" style="color: var(--text-primary)">{{ page.title }}</h1>
            
            <div class="prose max-w-none" style="color: var(--text-secondary)">
                {{ page.content|raw }}
            </div>
        </div>
    </div>
{% endblock %}

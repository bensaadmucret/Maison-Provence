{% extends 'base.html.twig' %}

{% block title %}Paiement annulé - {{ parent() }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg">
            <div class="p-6 sm:px-20 bg-white">
                <div class="mt-8 text-center">
                    <svg class="mx-auto h-12 w-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    
                    <h2 class="mt-4 text-2xl font-bold text-gray-900">Paiement annulé</h2>
                    <p class="mt-2 text-gray-600">
                        Votre paiement a été annulé. Aucun montant n'a été débité de votre compte.
                    </p>

                    <div class="mt-6 bg-gray-50 p-4 rounded-lg">
                        <h3 class="text-lg font-medium text-gray-900">Détails de la commande</h3>
                        <dl class="mt-4 space-y-4">
                            <div class="grid grid-cols-2 gap-4">
                                <dt class="text-sm font-medium text-gray-500">Référence</dt>
                                <dd class="text-sm text-gray-900">{{ order.reference }}</dd>
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <dt class="text-sm font-medium text-gray-500">Total</dt>
                                <dd class="text-sm text-gray-900">{{ order.total|number_format(2, ',', ' ') }} €</dd>
                            </div>
                        </dl>
                    </div>

                    <div class="mt-8 space-x-4">
                        <a href="{{ path('app_checkout_payment', {id: order.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                            Réessayer le paiement
                        </a>
                        <a href="{{ path('app_cart') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Retour au panier
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

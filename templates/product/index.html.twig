{% extends 'base.html.twig' %}

{% block title %}Nos Produits - {{ site_configuration.siteName }}
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Nos Produits</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for product in products %}
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                {% if product.media is not empty %}
                    <img src="{{ asset(product.media.first.path) }}" alt="{{ product.name }}" class="w-full h-48 object-cover">
                {% endif %}
                <div class="p-4">
                    <h2 class="text-xl font-semibold mb-2">{{ product.name }}</h2>
                    <p class="text-gray-600 mb-4">{{ product.description|slice(0, 100) }}...</p>
                    <div class="flex justify-between items-center">
                        <span class="text-xl font-bold text-primary">{{ product.price|number_format(2, ',', ' ') }} €</span>
                        <a href="{{ path('app_product_show', {id: product.id}) }}" 
                           class="bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition">
                            Voir détails
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full text-center py-8">
                <p class="text-gray-600">Aucun produit disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

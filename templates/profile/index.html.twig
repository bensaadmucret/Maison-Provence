{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold mb-6">Mon Profil</h1>
        
        <div class="space-y-4">
            <div class="border-b pb-4">
                <h2 class="text-lg font-semibold mb-2">Informations Personnelles</h2>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-gray-600">Nom</p>
                        <p class="font-medium">{{ user.lastName }}</p>
                    </div>
                    <div>
                        <p class="text-gray-600">Pr√©nom</p>
                        <p class="font-medium">{{ user.firstName }}</p>
                    </div>
                    <div class="col-span-2">
                        <p class="text-gray-600">Email</p>
                        <p class="font-medium">{{ user.email }}</p>
                    </div>
                </div>
            </div>
            
            <div class="flex justify-end space-x-4">
                <a href="{{ path('app_profile_edit') }}" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
                    Modifier mon profil
                </a>
                <a href="{{ path('app_reset_password_request') }}" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition-colors">
                    Changer mon mot de passe
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
